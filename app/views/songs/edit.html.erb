<% if @song.errors.any?%>
<div id="error_explanation">
<h2><%= pluralize(@song.errors.count, "error")%>
Accured: </h2>

<ul>
<% @song.errors.full_messages.each do |m|%>
<li><%= m%></li>
<%end%>
</ul>
</div>
<%end%>


<%= form_for @song do |f|%>

<%=f.label :title%>
<%=f.text_field :title%><br>
<%=f.label :released%>
<%=f.check_box :released%><br>
<%=f.label :released_year%>
<%=f.number_field :released_year%><br>
<%=f.label :artist_name%>
<%=f.text_field :artist_name%><br>
<%=f.label :genre%>
<%=f.text_field :genre%><br>
<%=f.submit "Edit Song"%>
<%end%>