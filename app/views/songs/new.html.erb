<% if @song.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@song.errors.count, "error") %>
      prohibited this post from being saved:
    </h2>
 
    <ul>
    <% @song.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @song do |f| %>
  Title       : <%= f.text_field :title %><br />
  Artist      : <%= f.text_field :artist_name %><br />
  Genre       : <%= f.text_area :genre %><br />
  Released?   : <%= f.check_box :released %><br />
  Release Year: <%= f.number_field :release_year %><br />
  <%= f.submit %>
<% end %>